{{>navbar}}
 
          {{#if mensaje}}<div id='estado' class='p-5 text-center'>
              <div
                class='alert alert-info'
                role='alert'
              >{{mensaje}}</div></div>{{/if}}


<div class='container mt-5 text-center'>
  <div class='row'>
    {{#if links}}
    {{#each links}}
    <div class='col-sm-4 p-2'>
      <div class='card'>
        <div class='card-body'>
          <h5 class='card-title'>{{name}}</h5>
          <p class='card-text'>{{description}}</p>
          <div class='card text-center p-3'>
            <a href='{{url}}' class='btn btn-outline-primary'>Ir al Link</a>
            <a href='/link-chest/editar-link/{{_id}}' class='btn btn-outline-success'>Editar </a>
            <a href='/link-chest/eliminar-link/{{_id}}' class='btn btn-outline-danger'>Eliminar</a>
            {{#if share}}<div class="m-3"><form action='/link-chest/no-compartir-link/{{_id}}?_method=patch' method="post"><button class='btn btn-outline-warning'>Dejar de compartir</button></form></div>
            {{else}}<div class="m-3"><form action='/link-chest/compartir-link/{{_id}}?_method=patch' method="post"><button class='btn btn-outline-warning'>Compartir</button></form></div>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
    {{/each}}
    <div class='col-sm-4 p-2'>
      <div class='card'>
        <div class='card-body'>
          <h5 class='card-title'>Creá un nuevo link</h5>

          <a href='/link-chest/agregar-link' class='btn btn-outline-primary'>Agregar</a>
        </div>
      </div>
    </div>
  </div>

  {{else}}
  <div class='row'>
    <div class='col-sm-6'>
      <div class='card'>
        <div class='card-body'>
          <h5 class='card-title'>Creá tu primer link</h5>
          <p class='card-text'>Añade uno o más links para que aparezcan aquí</p>
          <a href='link-chest/agregar-link' class='btn btn-primary'>Ir</a>
        </div>
      </div>
    </div>
  </div>
  {{/if}}
</div>
</div>