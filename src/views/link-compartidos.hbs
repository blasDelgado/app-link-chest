{{>navbar}}

{{#if mensaje}}<div id='estado' class='p-5 text-center'>
              <div
                class='alert alert-info'
                role='alert'
              >{{mensaje}}</div></div>{{/if}}

<div class='container mt-5 text-center'>
  <div class='row'>
    {{#if links}}
    {{#each links}}
    <div class='col-sm-4 p-2'>
      <div class='card'>
        <div class='card-body'>
          <h5 class='card-title'>{{url}}</h5>
          <p class='card-text'>Compartido por: {{user_name}}</p>
          <p class='card-text'>{{description}}</p>
          <div class='card text-center p-3'>
            <a href='{{url}}' class='btn btn-outline-primary'>Ir al Link</a>
            <div class="m-3"><form action='/link-chest/guardar-link-compartido/{{_id}}' method="post"><button class='btn btn-outline-success'>Guardar Link</button></form></div>
            
          </div>
        </div>
      </div>
    </div>
    {{/each}}
 {{/if}}
 