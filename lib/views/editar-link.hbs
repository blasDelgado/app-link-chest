{{>navbar}}
<div class='container mt-5 text-center'>
  <form action='/link-chest/editar-link/{{links._id}}?_method=PUT' method='post'>
    <div class='mb-3'>
      <label for='exampleInputUrl' class='form-label'>Link</label>
      <input
        type='url'
        class='form-control'
        name='url'
        aria-describedby='emailHelp'
        value={{links.url}}
        required
      />
      <div id='emailHelp' class='form-text'>Recuerde ingresar "http://" antes de
        la url a guardar.</div>
    </div>
    <div class='mb-3'>
      <label for='exampleInputText' class='form-label'>Nombre</label>
      <input
        type='text'
        class='form-control'
        name='name'
        required
        value='{{links.name}}'
      />
    </div>
    <div class='mb-3'>
      <label for='exampleInputText' class='form-label'>Descripcion</label>
      <input
        type='text'
        class='form-control'
        name='description'
        value='{{links.description}}'
      />
    </div>
    <button type='submit' class='btn btn-success'>Editar Link</button>
    <button class='btn btn-success'><a
        style=' text-decoration: none ; color: white'
        href='/link-chest'
      >Volver</a></button>
  </form>
</div>